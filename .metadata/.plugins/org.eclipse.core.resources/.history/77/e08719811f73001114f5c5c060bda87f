	//MyTank mt=new MyTank()
	public void paint(Graphics g)
	{
		super.paint(g);
	    	
		g.setColor(Color.green);
		g.fill3DRect(10,10,15,40,false);
		g.fill3DRect(0, 0, 10, 10,false);
		g.fill3DRect(0, 0, 10, 10,false);
		g.fillOval(0, 0, 10, 10);
		g.drawLine(0, 0, 10, 10);
	}
	
